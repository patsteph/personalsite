{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "build-css": "node build-css.js",
    "dev": "npm run build-css && next dev",
    "build": "next build",
    "prebuild": "npm run build-css && npm run generate-standard-config && npm run generate-secure-config",
    "start": "next start",
    "lint": "next lint",
    "export": "NODE_ENV=production npm run generate-standard-config && npm run generate-secure-config && next build",
    "generate-runtime-config": "node scripts/generate-runtime-config.js",
    "generate-standard-config": "node scripts/generate-standard-config.js",
    "generate-secure-config": "node scripts/generate-secure-config.js",
    "fix-paths": "node scripts/fix-paths/fix-paths.js",
    "fix-github": "node scripts/fix-github-pages.js",
    "build-export": "next build && touch out/.nojekyll",
    "deploy": "npm run build-css && npm run generate-standard-config && npm run generate-secure-config && next build",
    "deploy:static": "npm run build && next export && touch out/.nojekyll",
    "deploy:github": "npm run deploy:static && gh-pages -d out",
    "deploy:vercel": "vercel",
    "deploy:netlify": "netlify deploy"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "date-fns": "^4.1.0",
    "firebase": "^11.4.0",
    "firebase-admin": "^13.2.0",
    "gray-matter": "^4.0.3",
    "next": "15.2.1",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-firebase-hooks": "^5.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.17.23",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.14",
    "critters": "^0.0.23",
    "dotenv": "^16.4.7",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.1",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
